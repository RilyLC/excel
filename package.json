{
  "name": "nocode-excel-db-electron",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.cjs",
  "scripts": {
    "start": "electron .",
    "build:client": "npm --prefix client run build",
    "dist": "npm run build:client && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "open": "^11.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.nocode.excel.db",
    "productName": "NoCode Excel DB",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*",
      "server/**/*",
      "package.json",
      "!client/**",
      "!server/data/**",
      "!server/node_modules/**",
      "!**/node_modules/**/test{,s}/**",
      "!**/*.map",
      "!**/package-lock.json"
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "win": {
      "target": "portable",
      "signAndEditExecutable": false
    }
  }
}
